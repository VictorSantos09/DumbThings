@inherits LayoutComponentBase

<PageTitle>DumbThings.Blazor.UI</PageTitle>

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudDrawer @bind-Open="@_drawerOpen">
        <MudNavMenu>
            <MudNavLink Href="/" Match="NavLinkMatch.All">DumbThings</MudNavLink>
            <MudNavMenu Color="Color.Warning" Bordered="true">
                <MudNavGroup Title="Settings" Expanded="true">
                    <MudNavLink Href="/users" Icon="@Icons.Material.Filled.Image">Random Dogs Images</MudNavLink>
                    <MudNavLink Href="/security" Icon="@Icons.Material.Filled.Dashboard">Security</MudNavLink>
                </MudNavGroup>
            </MudNavMenu>
            <MudNavLink Href="https://github.com/VictorSantos09/DumbThings">
                <MudButton Size="Size.Large"
                           Target="_blank"
                           Variant="Variant.Text"
                           EndIcon="@Icons.Custom.Brands.GitHub"
                           Color="Color.Warning"
                           Match="NavLinkMatch.Prefix"
                           Style="text-transform:none">
                    GitHub
                </MudButton>
            </MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}